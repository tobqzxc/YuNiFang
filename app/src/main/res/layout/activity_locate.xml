<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoFrameLayout
        android:padding="10dp"
        android:id="@+id/locate_title"
        android:layout_width="match_parent"
        android:layout_height="90px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="设置"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_locate"
            android:layout_gravity="center_vertical"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/back_normal" />
    </com.zhy.autolayout.AutoFrameLayout>

    <!--分割线-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_below="@+id/locate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="#cfcfcf"
            android:layout_height="1dp"></View>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locate_title"
        android:orientation="vertical">
        <!--购物须知-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:padding="20dp">
            <TextView
                android:layout_width="0dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:text="购物须知"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/next_icon"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <!--分割线-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_below="@+id/locate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#cfcfcf"
                android:layout_height="1dp"></View>
        </com.zhy.autolayout.AutoLinearLayout>
        <!--意见反馈-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:padding="40px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:text="意见反馈"
                android:textColor="#000"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/next_icon"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <!--分割线-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_below="@+id/locate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#cfcfcf"
                android:layout_height="1dp"></View>
        </com.zhy.autolayout.AutoLinearLayout>
        <!--清除缓存-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:padding="40px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="#000"
                android:text="清除缓存"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已缓存0M"
                android:textSize="20sp"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <!--分割线-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#cfcfcf"
                android:layout_height="10px"></View>
        </com.zhy.autolayout.AutoLinearLayout>
        <!--关于我们-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:padding="40px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:text="关于我们"
                android:textColor="#000"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/about_us_code"/>
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/next_icon"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <!--分割线-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_below="@+id/locate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#cfcfcf"
                android:layout_height="1dp"></View>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--拨打电话-->

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:padding="40px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="#000"
                android:text="购物须知"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400-688-0900"
                android:textColor="#FC7C7E"
                android:textSize="40px"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <!--分割线-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#cfcfcf"
                android:layout_height="10px"></View>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:padding="40px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="#000"
                android:text="检查更新"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经是最新版本"
                android:textSize="20sp"
                />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
