<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:padding="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="登录" />

        <ImageView
            android:id="@+id/iv_locate"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back_normal" />

        <TextView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fc6b87" />
    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/register_content"
        android:layout_width="match_parent"
        android:layout_height="480px"
        android:layout_below="@+id/register_title"
        android:orientation="vertical"
        android:padding="40px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--登录选择按钮-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="70px">

                <TextView
                    android:id="@+id/register_name"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="御泥坊账号登录"
                    android:textColor="#fc6b87" />

                <TextView
                    android:id="@+id/register_phone"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="手机快速登录" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/page_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="@color/registerchecked"
                    android:hint="手机号" />

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:layout_marginTop="20px"
                    android:background="@color/registerchecked"
                    android:hint="密码"
                    android:visibility="visible" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_getCode"
                        android:layout_width="0px"
                        android:layout_height="70px"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@color/registerchecked"
                        android:hint="验证码"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_btn"
                        android:layout_width="0px"
                        android:layout_height="70px"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/register_selector"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="#fc6b87"
                        android:visibility="gone" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="忘记密码"
                    android:visibility="visible" />

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="20px"
            android:background="#fc6b87"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fff" />
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/register_iv"
        android:layout_width="match_parent"
        android:layout_height="185px"
        android:layout_below="@+id/register_content"
        android:layout_marginTop="30px"
        android:src="@mipmap/advert" />

    <TextView
        android:id="@+id/tv_Deng"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="第三方快速登录 >"
        android:textColor="#fc6b87"
        android:layout_marginBottom="90px"
        android:textSize="30px" />
</com.zhy.autolayout.AutoRelativeLayout>
